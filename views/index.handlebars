<div class="container">

  <div class="row">
    <div class="jumbotron jumbotron mx-auto rounded mt-5">
      <div class="container">
        <h1 class="display-4">Eat-Da-Burger!</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <h2 class="text-center">Burgers Available</h2>
        <hr>
      <ul>
          {{#each burgers}}
              {{#unless devoured}}
                <li>
                  {{this.name_burger}}
                   <button class='devour' data-id='{{this.id}}'>Devour</button>
                </li>
              {{/unless}}
          {{/each}}
      </ul>
    </div>

    <div class="col-md-4">
      <h2 class="text-center">Add a burger</h2>
      <hr>
      <form class="create-form">

        <div class="form-group text-center">
          <label for="ca"> <h4>Burger Type:</h3></label>
          <input class="form-control" type="text" id="ca" name="name">
        </div>

        <button class="btn btn btn-lg btn-secondary btn-block" type="submit">Submit</button>
      </form>
    </div>    

    <div class="col-md-4">
      <h2 class="text-center">Burgers Consumed</h2>
      <hr>

      <ul>
          {{#each burgers}}
              {{#if devoured}}
                <li>{{this.name_burger}}</li>
              {{/if}} 
          {{/each}}
      </ul>
    </div>

  </div>
</div>